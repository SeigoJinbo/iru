map.html.erb
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers[:organization].to_json %>"
     data-user="<%= @markers[:user].to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

  <%= form_with url: map_path, method: :get, local: true do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "filter"
  %>
  </div>
  <div class="index-submit"><%= submit_tag "Search", class: "btn btn-primary" %></div>
  <% end %>

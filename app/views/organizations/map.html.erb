<div class="d-flex">

  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers[:organization].to_json %>"
       data-user="<%= @markers[:user].to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       <h2>HEADER</h2>

    <div class="map-box">
      <div>
        <%= form_with url: map_path, method: :get, local: true do |f|%>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "filter" %>
          <div class="index-submit"><%= submit_tag "Search", class: "btn btn-primary" %></div>
        <% end %>
      </div>

      <div>
        <% @organizations.each do |organization| %>
          <p><%= link_to organization.name, organization_path(organization) %></p>
        <% end %>
      </div>

    </div>
  </div>


</div>

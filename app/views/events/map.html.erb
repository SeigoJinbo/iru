<div class="d-flex">
  <div id="map" style="width: 100%; height: calc(100vh - 66px);" data-markers="<%= @markers[:event].to_json %>"
    data-user="<%= @markers[:user].to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

    <!----------------------Filter---------------------->
    <div class="map-box mt-5">
      <%= render 'events/search_box', events: @events %>
    </div>
    <div class="d-flex justify-content-center align-item-center">
      <h1 class="mt-5"><i class="fas fa-spinner fa-pulse"></i></h1>
    </div>
  </div>
</div>